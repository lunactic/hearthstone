<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="control-group">
    <%= f.label :username, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :username, :autofocus => true, :class => 'text_field' %> *
    </div>
  </div>

  <div class="control-group">
    <%= f.label 'Real name', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :realname, :autofocus => true, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.email_field :email, :autocomplete => "off", :class => 'email_field' %> *
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password, :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password, :class => 'password_field' %> *
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password_confirmation, :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password_confirmation, :class => 'password_field' %> *
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      Fields marked with * are mandatory
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit 'Sign up', :class => 'btn btn-primary' %> or
    <%= render "devise/shared/links" %>
  </div>
<% end %>


