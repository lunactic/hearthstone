<%- model_class = Card -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @card.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:card_class) %>:</strong></dt>
  <dd><%= @card.card_class %></dd>
  <dt><strong><%= model_class.human_attribute_name(:card_type) %>:</strong></dt>
  <dd><%= @card.card_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rarity) %>:</strong></dt>
  <dd><%= @card.rarity %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cost) %>:</strong></dt>
  <dd><%= @card.cost %></dd>
  <dt><strong><%= model_class.human_attribute_name(:attack) %>:</strong></dt>
  <dd><%= @card.attack %></dd>
  <dt><strong><%= model_class.human_attribute_name(:health) %>:</strong></dt>
  <dd><%= @card.health %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @card.description %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              :back, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_card_path(@card), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              card_path(@card),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
