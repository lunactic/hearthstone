<h1>All current cards</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Class</th>
    <th>Type</th>
    <th>Rarity</th>
    <th>Cost</th>
    <th>Attack</th>
    <th>Health</th>
    <th>Description</th>
  </tr>

  <% @cards.each do |card| %>
      <tr>
        <td><%= card.name %></td>
        <td><%= card.card_class %></td>
        <td><%= card.card_type %></td>
        <td><%= card.rarity %></td>
        <td><%= card.cost %></td>
        <td><%= card.attack %></td>
        <td><%= card.health %></td>
        <td><%= card.description %></td>
      </tr>
  <% end %>
</table>
